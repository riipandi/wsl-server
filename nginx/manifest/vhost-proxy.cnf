upstream APP_NAME {
    server APP_HOST;
}

server {
    listen 80;
    listen 443 ssl http2;
    server_name HOSTNAME;
    # server_name www.HOSTNAME;

    root /srv/HOSTNAME/public;

    access_log /var/log/nginx/HOSTNAME-access.log main;
    error_log  /var/log/nginx/HOSTNAME-error.log warn;

    ssl_dhparam          /etc/ssl/certs/dhparam-4096.pem;
    ssl_certificate      /etc/letsencrypt/live/HOSTNAME/fullchain.pem;
    ssl_certificate_key  /etc/letsencrypt/live/HOSTNAME/privkey.pem;

    # add_header Public-Key-Pins 'pin-sha256="Hash1"; pin-sha256="Hash2"; pin-sha256="Hash3"; max-age=5184000;';
    # add_header X-Robots-Tag "noindex, nofollow, nosnippet, noarchive";

    # redirect to non-www.
    if ( $host ~ ^www\.(?<domain>.+)$ ) {
        return 301 $scheme://$domain$request_uri;
    }

    # Hotlinking Protection.
    location ~ .(gif|png|jpe?g)$ {
        valid_referers none blocked ~.google. ~.bing. ~.yahoo HOSTNAME ~.HOSTNAME;
        if ($invalid_referer) { return 403; }
    }

    # Include server parameter.
    include server.d/server.conf;

    # Proxy handler.
    location / {
        proxy_buffering  off;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header User-Agent $http_user_agent;
        proxy_set_header Host $http_host;
        proxy_pass http://APP_NAME;
    }
}
